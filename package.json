{
	"name": "abc-to-svg",
	"displayName": "ABC2SVG Support",
	"description": "Support for ABC Music Notation using abc2svg.",
	"version": "0.4.0",
	"engines": {
		"vscode": "^1.45.0"
	},
	"icon": "resources/icons/appIcon.png",
	"author": {
		"name": "Laurent Yin"
	},
	"categories": [
		"Programming Languages"
	],
	"repository": {
		"url": "https://github.com/laurent-yin/vscode-abc-music-editor"
	},
	"activationEvents": [
		"onLanguage:abc",
		"onFileSystem:abc"
	],
	"publisher": "Laurent Yin",
	"main": "./out/extension/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vscode-abc-music-editor.showMusicsheet",
				"title": "Preview ABC. You can hit Ctrl+S (save) on a file to update the view of the last opened Preview panel.",
				"icon": {
					"light": "resources/icons/light/quaver.svg",
					"dark": "resources/icons/dark/quaver.svg"
				}
			}
		],
		"configurationDefaults": {
			"[abc]": {
				"editor.wordBasedSuggestions": "off"
			}
		},
		"menus": {
			"editor/title": [
				{
					"command": "vscode-abc-music-editor.showMusicsheet",
					"when": "editorLangId == abc",
					"group": "navigation"
				}
			]
		},
		"languages": [
			{
				"id": "abc",
				"aliases": [
					"ABC"
				],
				"extensions": [
					".abc"
				]
			},
			{
				"id": "abcconfig",
				"aliases": [
					"ABCCONFIG"
				],
				"extensions": [
					".abcconfig"
				]
			}
		],
		"grammars": [
			{
				"language": "abc",
				"scopeName": "source.abc",
				"path": "./language/abc.tmGrammar.json"
			},
			{
				"language": "abcconfig",
				"scopeName": "source.abcconfig",
				"path": "./language/abcconfig.tmGrammar.json"
			}
		],
		"snippets": [
			{
				"language": "abc",
				"path": "./snippets/snippets.json"
			}
		],
		"webviewResources": [
			"lib/**",
			"src/webview/**",
			"out/lib/**",
			"out/webview/**"
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run build",
		"build": "tsc -p ./ && npm run copy-assets",
		"copy-assets": "cpx lib/*.* out/lib && cpx node_modules/lz-string/libs/lz-string.min.js out/lib",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run build && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/node": "^22.14.1",
		"@types/vscode": "^1.99.1",
		"@typescript-eslint/eslint-plugin": "^8.30.1",
		"@typescript-eslint/parser": "^8.30.1",
		"cpx": "^1.5.0",
		"eslint": "^9.25.0",
		"typescript": "^5.8.3",
		"vscode-test": "^1.6.1"
	},
	"dependencies": {
		"abctools": "^0.1.9",
		"lz-string": "^1.5.0"
	}
}

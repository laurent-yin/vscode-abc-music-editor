{
	"Insert ABC Header": {
		"prefix": "header-abc",
		"body": [
			"X:1",
      "%%topmargin 0",
      "%%botmargin 0",
			"T:${1:Title}",
			"C:${2:Composer}",
      "%%MIDI gchord fc2cfhcf",
			"M:${3|2/4,6/8|}",
			"L:${4|1/16,1/8|}",
      "Q:${5|1/4=92,1/4=96|}",
      "R:${6:Rhythm}",
			"K:${7:Key} clef=treble"
		],
		"description": "Insert ABC Header"
    },
    "Insert ABC style directives": {
        "prefix": "style-abc",
		"body": [
        "%%partsfont Times-BoldItalic 15 box",
        "%%gchordfont Helvetica-BoldItalic 10",
        "%%titleformat R-Q- T C1",
        "%%composerspace 0",
        "%%musicspace 0",
        "%%partsspace 0",
        "%%titlespace 0",
        "%%topspace 0",
        "%%leftmargin 0",
        "%%rightmargin 0",
        "%%maxshrink 0.9",
        "%%cancelkey 0",
        "%%keywarn 0"
        ],
     "description": "Insert style directives for ABC files"
    },
    "Chord": {
        "prefix": "c",
		"body": [
        "\"$1\"${2:Z} "
        ],
     "description": "Insert Chord"
    },
    "Major Chord": {
        "prefix": "cM",
		"body": [
        "\"${1|A,Bb,B,C,C#,Db,D,Eb,E,F,F#,Gb,G,G#|}\"${2:Z} "
        ],
     "description": "Insert a Major Chord"
    },
    "Minor Chord": {
        "prefix": "cm",
		"body": [
        "\"${1|A,Bb,B,C,C#,Db,D,Eb,E,F,F#,Gb,G,G#|}m\"${2:Z} "
        ],
     "description": "Insert a Minor Chord"
    },
    "7th Chord": {
        "prefix": "c7",
		"body": [
        "\"${1|A,Bb,B,C,C#,Db,D,Eb,E,F,F#,Gb,G,G#|}7\"${2:Z} "
        ],
     "description": "Insert a 7th Chord"
    },
    "Diminished Chord": {
        "prefix": "cdim",
		"body": [
        "\"${1|A,Bb,B,C,C#,Db,D,Eb,E,F,F#,Gb,G,G#|}Â°\"${2:Z} "
        ],
     "description": "Insert a Diminished Chord"
    },
    "Half-Diminished Chord": {
        "prefix": "chdim",
		"body": [
        "\"${1|A,Bb,B,C,C#,Db,D,Eb,E,F,F#,Gb,G,G#|}m7b5\"${2:Z} "
        ],
     "description": "Insert a Half-Diminished Chord"
    }
}